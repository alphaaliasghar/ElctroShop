@model LoginViewModel
@{
    ViewData["Title"] = "ورود";
}

<div class="container mt-20">
    <section class="box-section border account-layer">
        <header class="right-border">
            <h3> ورود به سایت </h3>
        </header>
        <div class="form-layer">
            <form asp-action="Login" method="post">
               
                <input  type="hidden"value=" @ViewBag.ReturnURL"name="ReturnURL"/>
                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input asp-for="UserNameOrEmail" type="text" class="form-control" placeholder=" نام کاربری یا ایمیل">
                    <span asp-validation-for="UserNameOrEmail"></span>
                </div>
                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-key"></i></span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور ">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="remember-me">
                    <label><input type="checkbox" asp-for="RememberMy"> مرا بخاطر بسپار </label>
                </div>
                <div class="link">
                    <a href=""> <i class="fa fa-lock"></i> رمز عبور خود را فراموش کرده ام !</a>
                    <a href="register.html"> <i class="fa fa-account"></i> عضویت در سایت </a>
                </div>
                <button class="btn btn-danger btn-md btn-block btn-radius"> ورود به سایت </button>
            </form>
        </div>
    </section>
</div>


@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}